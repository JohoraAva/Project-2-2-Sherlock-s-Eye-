<body>
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <h3>FILE A NEW CASE IN SHERLOCK'S EYE</h3>
                </div>
                <div class="card-body">
            
                            <form action="/api/add-resources/add-resources/<%= curr_user%>" method="post">
                                
                                </div>

                                <div class="input-group form-group">
                                    <input type="text" class="form-control" id="caseId" name="caseId" placeholder=" Enter Case Id *" required
                                        value="<%= (typeof form != 'undefined')? form.title : '' %>">
                                </div>

                                <div class="input-group form-group">
                                    <input type="text" class="form-control" id="title" name="title" placeholder=" Resource Title *" required
                                        value="<%= (typeof form != 'undefined')? form.title : '' %>">
                                </div>
                                <div class="input-group form-group">
                                    <input type="text" class="form-control" id="description" name="description" placeholder="Description *" required
                                        value="<%= (typeof form != 'undefined')? form.description : '' %>">

                                </div>

                                <div class="form-group">
                                    <label for="exampleFormControlFile1" name="uploadedFile">Input Resource File</label>
                                    <input type="file" class="form-control-file" id="uploadedFile" multiple>
                                </div>

                                
                                 <div class="form-group">
                                    <input type="submit" value="Upload Resource" class="btn float-right login_btn">
                                </div>
                            </form>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-center links">
